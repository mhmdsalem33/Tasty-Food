<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.bottomshet.MealBottomSheetFragment"
    android:id="@+id/bottom_sheet"

    >




    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_2sdp"


        >
        <ImageView
            android:id="@+id/img_bottom_sheet"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@color/accent"
            />


    </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linear_bottom_sheet"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            app:layout_constraintStart_toEndOf="@+id/card_view_bottom_sheet"
            app:layout_constraintTop_toTopOf="@+id/card_view_bottom_sheet"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"

            android:layout_marginTop="@dimen/_15sdp"

            >
            <TextView
                android:id="@+id/tv_area_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Palestine"
                android:textColor="@color/accent"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/myfont"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_location"
                app:drawableTint="@color/accent"


                />
            <TextView
                android:id="@+id/tv_category_bottom_sheet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Beef"
                android:textColor="@color/accent"
                android:textSize="@dimen/_10ssp"
                android:fontFamily="@font/myfont"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_category"
                app:drawableTint="@color/accent"
                android:drawablePadding="@dimen/_2sdp"


                />






        </LinearLayout>

        <TextView
            android:id="@+id/tv_meal_name_bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meal Name"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/accent"
            android:fontFamily="@font/myfont"
            app:layout_constraintTop_toBottomOf="@+id/linear_bottom_sheet"
            app:layout_constraintStart_toStartOf="@+id/linear_bottom_sheet"
            android:layout_marginStart="@dimen/_10sdp"

            />
    <TextView
        android:id="@+id/tv_read_bottom_sheet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Read More ..."
        android:textColor="@color/accent"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/myfont"
        app:layout_constraintTop_toBottomOf="@+id/tv_meal_name_bottom_sheet"
        app:layout_constraintStart_toStartOf="@+id/tv_meal_name_bottom_sheet"


        />




</androidx.constraintlayout.widget.ConstraintLayout>